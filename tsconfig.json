{
    "compileOnSave": false,
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "esnext",
        "jsx": "react",
        "importHelpers": true,
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": true,
        "baseUrl": "./src",
        "outDir": "./dist/",
        "pretty": true,
        "lib": ["es6", "dom", "es2015.promise"],
        "sourceMap": true,
        "experimentalDecorators": true,
        "target": "es5"
    },
    "include": ["./src/**/*"]
}
